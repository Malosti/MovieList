@model IEnumerable<MovieList.Models.MovieModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="page-title">My favorite movies</h2>

<p>
    <a class="link-pages" asp-action="Create">Add Movie</a>
</p>
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a class="link-pages" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="link-pages" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="link-pages" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
